<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  tools:context=".main.activity.InitNameActivity">


  <LinearLayout
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="vertical">


	<android.support.design.widget.TextInputLayout
	  android:id="@+id/til_pet_name"
	  android:layout_width="match_parent"
	  android:layout_height="wrap_content"
	  android:animateLayoutChanges="true"
	  app:hintAnimationEnabled="true"
	  android:layout_marginTop="80dp">

	  <android.support.design.widget.TextInputEditText
		android:animateLayoutChanges="true"
		app:hintAnimationEnabled="true"
		android:id="@+id/et_pet_name"
		android:layout_width="280dp"
		android:layout_height="wrap_content"
		android:layout_gravity="center"
		android:hint="@string/input_pet_name"
		android:inputType="text"
		android:textAlignment="center" />

	</android.support.design.widget.TextInputLayout>

	<android.support.design.widget.TextInputLayout
	  android:id="@+id/til_master_name"
	  android:layout_width="match_parent"
	  android:layout_height="wrap_content"
	  android:animateLayoutChanges="true"
	  android:visibility="gone"
	  app:hintAnimationEnabled="true"
	  android:layout_marginTop="80dp">

	  <android.support.design.widget.TextInputEditText
		android:animateLayoutChanges="true"
		app:hintAnimationEnabled="true"
		android:id="@+id/et_master_name"
		android:layout_width="280dp"
		android:layout_height="wrap_content"
		android:layout_gravity="center"
		android:hint="@string/input_master_name"
		android:inputType="text"
		android:textAlignment="center" />

	</android.support.design.widget.TextInputLayout>

	<Button
	  android:id="@+id/btn_next_step"
	  android:layout_width="wrap_content"
	  android:layout_height="wrap_content"
	  android:layout_gravity="end"
	  android:layout_marginTop="100dp"
	  android:layout_marginEnd="50dp"
	  android:text="@string/next_step" />

  </LinearLayout>


</android.support.constraint.ConstraintLayout>